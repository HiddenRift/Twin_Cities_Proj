<twin_city_config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="twinCities.xsd">

    <uwe_environment>
        <base_url>{URLTOFILE}/TwinCities.php</base_url>
        <base_path><!-- UWE file link for files--></base_path>
        <my_sql>
            <database>{DBASENAME}</database>
            <username>{DBASEUNAME}</username>
            <pword>{DBASEPWORD}</pword>
            <database_host>{DBASEHOST}</database_host>
        </my_sql>
    </uwe_environment>


    <!-- API KEYS/SECRETS -->
    <api>
        <google>{GMAPSAPIKEY}</google>
        <yahoo>http://query.yahooapis.com/v1/public/yql</yahoo>
        <flickr_key>FLICKRAPIKEY</flickr_key>
        <flickr_secret>FLICKRSECRET</flickr_secret>
    </api>

    <cities>
        <city name="Leicester" woeid="26062"/>

        <city name="Strasbourg" woeid="627791"/>

    </cities>

</twin_city_config>
